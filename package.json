{
  "name": "processlens",
  "displayName": "ProcessLens",
  "description": "Track and analyze build, test, and other process times to gain insights and iterate faster.",
  "publisher": "processlens",
  "version": "0.1.1",
  "engines": {
    "vscode": "^1.85.0"
  },
  "icon": "images/icon-128.png",
  "categories": [
    "Other",
    "Testing",
    "Debuggers"
  ],
  "keywords": [
    "performance",
    "analytics",
    "build",
    "test",
    "timing",
    "dashboard",
    "metrics",
    "monitoring",
    "development",
    "productivity",
    "local-first",
    "command-tracking"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./out/src/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "processlens.runCommand",
        "title": "ProcessLens: Run"
      },
      {
        "command": "processlens.openDashboard",
        "title": "ProcessLens: Open Dashboard"
      },
      {
        "command": "processlens.generateDummyData",
        "title": "ProcessLens: Generate Dummy Data (Testing)"
      }
    ],
    "taskDefinitions": [
      {
        "type": "processlens-script",
        "required": [
          "script"
        ],
        "properties": {
          "script": "string"
        }
      },
      {
        "type": "processlens-ad-hoc",
        "required": [
          "cmd"
        ],
        "properties": {
          "cmd": "string"
        }
      }
    ],
    "configuration": {
      "type": "object",
      "title": "ProcessLens",
      "properties": {
        "processlens.captureDeviceInfo": {
          "type": "boolean",
          "default": true,
          "description": "Include OS/CPU/RAM/Node version in events (local only)."
        },
        "processlens.statusBar.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Show ProcessLens status in the status bar."
        },
        "processlens.statusBar.priority": {
          "type": "number",
          "default": -10,
          "description": "Status bar item priority (lower numbers appear more to the left)."
        },
        "processlens.storage.backend": {
          "type": "string",
          "enum": [
            "jsonl",
            "sqlite"
          ],
          "default": "jsonl",
          "description": "Storage backend for events (SQLite support coming soon)."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "npm run compile:dashboard && npm run compile:extension",
    "compile:dashboard": "tsc -p tsconfig.dashboard.json",
    "compile:extension": "tsc -p ./",
    "watch": "tsc -w -p ./",
    "package": "vsce package --allow-star-activation",
    "lint": "echo 'Linting not configured yet'",
    "test": "echo 'Tests not configured yet'",
    "clean": "rm -rf out/ media/dashboard.js media/dashboard.js.map *.vsix",
    "prepackage": "npm run clean && npm run compile"
  },
  "dependencies": {
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/chart.js": "^2.9.41",
    "@types/node": "^20.11.0",
    "@types/uuid": "^9.0.7",
    "@types/vscode": "^1.85.0",
    "@vscode/vsce": "^3.6.0",
    "typescript": "^5.4.0"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ProcessLens/processlens-vscode"
  },
  "bugs": {
    "url": "https://github.com/ProcessLens/processlens-vscode/issues"
  },
  "homepage": "https://processlens.dev"
}
